<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Login</title>
    <link href="~/Content/MainSite.css" rel="stylesheet" />

</head>
<body>
    <div>
        <div class="title"><p>Create Account</p></div>
        <div class="register">
            <div class="login-form">
                <div>
                    <input type="text" name="frist_name" placeholder="First Name">
                </div>
                <div>
                    <input type="text" name="last_name" placeholder="Last Name">
                </div>
                <div>
                    <input type="email" name="email" placeholder="Email">

                </div>
                <div>
                    <input type="password" name="password" placeholder="Password">
                </div>
                <div>
                    <button id="common-button">Create</button>
                </div>
                <div class="sub-title">
                    @Html.ActionLink("Return to store", "", "")
                </div>
            </div>
        </div>

    </div>

</body>
</html>
